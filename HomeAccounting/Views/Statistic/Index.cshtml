@model HomeAccounting.Models.Statistic
@{
    ViewBag.Title = "Statistics";
}


<style>
    .con {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        height: 10vh;
    }

    .btn {
        display: inline-block;
        padding: 20px 40px;
        background-color: blue;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-size: 24px;
        transition: background-color 0.3s;
        margin: 0 10px;
    }

        .btn:hover {
            background-color: darkblue;
        }
</style>



<br /> <br /> <br />
<h1>Статистика</h1>




<div>
    <h3>Загальні доходи: @Model.TotalIncome грн</h3>
    <h3>Загальні витрати: @Model.TotalExpenses грн</h3>
    <h3>Баланс: @Model.Balance грн</h3>
</div>

@using (Ajax.BeginForm("GetTransactionsByPeriod", new AjaxOptions { UpdateTargetId = "results" }))
{
    <div class="form-group">
        @Html.Label("Початкова дата:")
        @Html.TextBox("startDate", null, new { @class = "form-control" }) <!-- Поле для введення початкової дати -->

        @Html.Label("Кінцева дата:")
        @Html.TextBox("endDate", null, new { @class = "form-control" }) <!-- Поле для введення кінцевої дати -->
    </div>

    <input type="submit" value="Пошук" class="btn btn-primary btn-sm" />
}


<br /><br /><br />
<div class="con">
    <a class="btn" href="#" onclick="showMessage()">Графік Доходів</a>
    <a class="btn" href="#" onclick="showMessage()">Графік Витрат</a>
</div>
<script>
    function showMessage() {
        alert('В процесі розробки');
    }
</script>
<script src="@Url.Content("~/scripts/jquery-1.10.2.js")"></script>
<script src="@Url.Content("~/scripts/jquery.unobtrusive-ajax.js")"></script>